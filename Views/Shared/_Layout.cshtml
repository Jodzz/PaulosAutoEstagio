<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!--jQuery-->
    <script src="https://code.jquery.com/jquery-3.5.0.min.js"></script>
    <!--favicon-->
    <script src="https://kit.fontawesome.com/45aa892a43.js" crossorigin="anonymous"></script>
    <!--toggle checkbox-->
    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
    <!--multi select-->
    
    <style>
        a.customHover:hover {
            color: red !important;
            text-shadow: 2px 4px 5px rgba(0,0,0,0.2), 0px 0px 10px rgba(255,255,255,0.2);
        } 

        #spinnerModal {
            position: fixed; /* Stay in place */
            z-index: 9999; /* Sit on top */
            padding-top: 100px; /* Location of the box */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: hidden; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }

        .adjustFooterLH{
            line-height:30px;
        }
    </style>
</head>
<body>
    <header>
        <nav style="background-color:#efefef;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="EquipamentosHome"><img src="~/images/logo.png" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark customHover font-weight-bold" asp-area="" asp-controller="Home" asp-action="Avarias">Avarias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark customHover font-weight-bold" asp-area="" asp-controller="Home" asp-action="Faturacao">Faturação</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li id="logoutLink" class="nav-item ml-auto">
                            <a class="nav-link text-dark customHover font-weight-bold" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div style="height:10px;" class="bg-danger box-shadow border-bottom mb-3"></div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div id="spinnerModal" class="bg-white">
                <div class="d-flex justify-content-center mt-5">
                    <img src="~/images/logo.png" style="width: 225px; height:90px;" />
                </div>
                <div class="d-flex justify-content-center">
                    <div class="spinner-border text-danger mt-5" style="width: 3rem; height: 3rem;" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-5">
                    <h3>A caregar a página.</h3>
                </div>
            </div>

            @RenderBody()
        </main>
    </div>

    <footer style="background-color:#efefef;" class="border-top footer text-muted box-shadow">
        <div class="container">
            <span><a asp-controller="Home" asp-action="Privacy">Privacidade</a> | <a asp-controller="Home" asp-action="Cookies">Cookies</a> | <a asp-controller="Home" asp-action="Contactos">Contactos</a></span>
            <div id="footer-section" class="float-right">
                <span>PaulosAuto &copy;, All Rights Reserved.</span>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        /*esconde modal de loading quando a página carrega*/
        $(document).ready(function () {
            $("#spinnerModal").addClass("d-none");
        });

        /*ajustes de resize*/
        $(document).ready(function () {
            if ($(window).width() < 767.98) {
                $("#footer-section").removeClass("float-right");
                $("#logoutLink").removeClass("ml-auto");
                $("footer").addClass("text-center adjustFooterLH");
            }
            else {
                $("footer").removeClass("text-center adjustFooterLH");
                $("#footer-section").addClass("float-right");
                $("#logoutLink").addClass("ml-auto");
            }
        });

        $(document).ready(function () {
            $(window).resize(function () {
                if ($(this).width() < 767.98) {
                    $("#footer-section").removeClass("float-right");
                    $("#logoutLink").removeClass("ml-auto");
                    $("footer").addClass("text-center adjustFooterLH");
                }
                else {
                    $("footer").removeClass("text-center adjustFooterLH");
                    $("#footer-section").addClass("float-right");
                    $("#logoutLink").addClass("ml-auto");
                }
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
